<h1>Create New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>

  <label>Title:
    <input type="text" name="goal[title]" value="" id="title">
  </label>
  <br>

  <label>Description:
    <textarea name="goal[description]" id="description"></textarea>
  </label>
  <br>

  <label>Visibility:
    <label>Public
      <input type="radio" name="goal[visibility]" id="visibility_pub" value="PUBLIC">
    </label>
    <label>Private
      <input type="radio" name="goal[visibility]" id="visibility_pri" value="PRIVATE" checked="checked">
    </label>
  </label>
  <br>
  <input type="hidden" name="goal[status]" value="NEW">
  <input type="submit" value="Submit">
</form>
